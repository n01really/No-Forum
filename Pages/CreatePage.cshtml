@page
@model No_Forum.Pages.CreatePageModel
@{
    ViewData["Title"] = "Create Forum Page";
}

<h2>Create Forum Page</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="ForumPage.Title"></label>

        <input asp-for="ForumPage.Title" class="form-control" />
        <span asp-validation-for="ForumPage.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ForumPage.Description"></label>
        <textarea asp-for="ForumPage.Description" class="form-control"></textarea>
        <span asp-validation-for="ForumPage.Description" class="text-danger"></span>
    </div>

    
    
    
    <p>Chose at least one</p>
    <div class="form-check">
        <input asp-for="ForumPage.Political" class="form-check-input" />
        <label asp-for="ForumPage.Political" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="ForumPage.NSFW" class="form-check-input" />
        <label asp-for="ForumPage.NSFW" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="ForumPage.Roleplay" class="form-check-input" />
        <label asp-for="ForumPage.Roleplay" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="ForumPage.Discussion" class="form-check-input" />
        <label asp-for="ForumPage.Discussion" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="ForumPage.Meme" class="form-check-input" />
        <label asp-for="ForumPage.Meme" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="ForumPage.Art" class="form-check-input" />
        <label asp-for="ForumPage.Art" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="ForumPage.Technology" class="form-check-input" />
        <label asp-for="ForumPage.Technology" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

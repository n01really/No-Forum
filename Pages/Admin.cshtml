@page
@model No_Forum.Pages.AdminModel
@using Microsoft.AspNetCore.Identity

<h2>User Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="RemoveUserId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to remove this user?');">Remove</button>
                    </form>
            </td>
        </tr>
    }
    </tbody>
</table>
